<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="floatingActionButtonStyle">@style/Widget.MyRecipes.FloatingActionButton</item>
        <item name="tabStyle">@style/Widget.MyRecipes.TabLayout</item>
        <item name="textInputStyle">@style/Widget.MyRecipes.TextInputLayout</item>
<!--        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MyRecipes.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MyRecipes.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MyRecipes.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MyRecipes.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MyRecipes.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MyRecipes.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyRecipes.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MyRecipes.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyRecipes.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MyRecipes.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyRecipes.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MyRecipes.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MyRecipes.Overline</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Transparent.NoActionBar" parent="AppTheme.Transparent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="Widget.MyRecipes.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/md_white_1000</item>
    </style>

    <style name="Widget.MyRecipes.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">@color/secondaryColor</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="android:background">@color/tabColor</item>
    </style>

    <style name="Widget.MyRecipes.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"></style>

    <style name="Widget.MyRecipes.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"></style>

    <style name="Widget.MyRecipes.TextInputLayout.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"></style>

    <style name="Widget.MyRecipes.ImageButton" parent="Widget.MaterialComponents.Button">
        <!--<item name="backgroundTint">@color/primaryDarkColor</item>-->
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="tint">@color/md_white_1000</item>
        <item name="rippleColor">@color/md_white_1000</item>
        <item name="elevation">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.MyRecipes.ImageButton.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!--<item name="backgroundTint">@color/primaryDarkColor</item>-->
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="elevation">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="rippleColor">@color/primaryColor</item>
        <item name="android:strokeWidth">0</item>
        <item name="iconTint">@color/md_black_1000</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="TextAppearance.MyRecipes.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
    </style>

    <style name="TextAppearance.MyRecipes.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
    </style>

    <style name="TextAppearance.MyRecipes.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
    </style>

    <style name="TextAppearance.MyRecipes.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
    </style>

    <style name="TextAppearance.MyRecipes.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
    </style>

    <style name="TextAppearance.MyRecipes.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
    </style>

    <style name="TextAppearance.MyRecipes.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
    </style>

    <style name="TextAppearance.MyRecipes.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
    </style>

    <style name="TextAppearance.MyRecipes.Body1" parent="TextAppearance.MaterialComponents.Body1">
    </style>

    <style name="TextAppearance.MyRecipes.Body2" parent="TextAppearance.MaterialComponents.Body2">
    </style>

    <style name="TextAppearance.MyRecipes.Caption" parent="TextAppearance.MaterialComponents.Caption">
    </style>

    <style name="TextAppearance.MyRecipes.Button" parent="TextAppearance.MaterialComponents.Button">
    </style>

    <style name="TextAppearance.MyRecipes.Overline" parent="TextAppearance.MaterialComponents.Overline">
    </style>

</resources>
